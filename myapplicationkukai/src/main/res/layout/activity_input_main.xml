<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kkkcut.www.myapplicationkukai.PubulicKey.InputMainActivity">
      <RelativeLayout
          android:background="#16A4FA"
          android:layout_width="match_parent"
          android:layout_height="60dp">
          <TextView
              android:textColor="#090100"
              android:textSize="24sp"
              android:text="Input"
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>
    <LinearLayout
        android:padding="5dp"
         android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_weight="0.8"
            android:background="#FBBE01"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="400dp">

                <EditText
                    android:background="@drawable/edit_shape"
                    android:id="@+id/input_et"
                    android:layout_width="400dp"
                    android:layout_height="40dp" />

                <GridLayout
                    android:layout_marginTop="30dp"
                    android:columnCount="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:id="@+id/btn1"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="1"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn2"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="2"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />

                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn3"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="3"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn4"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="4"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn5"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="5"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/btn6"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="6"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn7"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="7"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />
                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn8"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="8"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />

                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn0"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="0"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />

                    <Button
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/btn9"
                        android:textColor="#030401"
                        android:background="#16A4FA"
                        android:text="9"
                        android:layout_width="55dp"
                        android:layout_height="60dp" />

                </GridLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                    <Button
                        android:layout_width="120dp"
                        android:gravity="right|bottom"
                        android:text="Clear"
                        android:id="@+id/btnClear"
                        android:textAllCaps="false"
                        android:background="@drawable/btnclearimage"
                        android:layout_height="60dp"
                        />
                    <Button
                        android:textAllCaps="false"
                        android:layout_marginLeft="4dp"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btnmoveleftimage"
                        />
                    <Button
                        android:textAllCaps="false"
                        android:layout_marginLeft="4dp"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btnmoverightimage"
                        />
                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:padding="5dp"
          android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Button
                android:gravity="bottom|center"
                android:textAllCaps="false"
                android:text="Decimal"
                android:background="@drawable/btnshowdecimalimage"
                android:layout_width="128px"
                android:layout_height="90px" />
            <Button
                android:textAllCaps="false"
                android:gravity="bottom|center"
                android:text="Invert Bitting"
                android:layout_marginTop="40dp"
                android:background="@drawable/btninvertimage"
                android:layout_width="128px"
                android:layout_height="90px" />
            <Button
                android:gravity="bottom|center"
                android:layout_marginTop="30dp"
                android:text="OK"
                android:background="@drawable/btnenterimage"
                android:layout_width="128px"
                android:layout_height="90px" />
            <Button
                android:gravity="center|bottom"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:background="@drawable/close_imge_switching"
                android:layout_width="128px"
                android:layout_height="90px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
