<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="4dp"
    android:background="#16A4FA"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cutter_hint"
            android:src="@drawable/endmillcutter"
            android:layout_width="126dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_cutter_specification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="ref.T60-E20-P"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_storage_diameter_data"
            android:background="#ffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="2mm"
            android:layout_width="126dp"
            android:layout_height="45dp" />
        <ImageView
            android:clickable="true"
            android:id="@+id/btn_subtract"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btndepthdownimage_frmkeycut_docutres"
            android:layout_width="80dp"
            android:layout_height="45dp" />
        <ImageView
            android:clickable="true"
            android:id="@+id/btn_add"
            android:background="@drawable/btnscrolllistupdisabledimage_frmbarcoderes"
            android:layout_width="80dp"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>