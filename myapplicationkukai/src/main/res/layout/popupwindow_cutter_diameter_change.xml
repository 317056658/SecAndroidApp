<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="4dp"
    android:background="#16A4FA"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="361px"
        android:layout_height="wrap_content">
        <ImageView
           android:background="@drawable/endmillcutter"
            android:layout_width="166px"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_cutter_specification"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="ref.T60-E20-P"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
              android:gravity="center_vertical"
            android:id="@+id/tv_storage_diameter_data"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="2mm"
            android:layout_width="166px"
            android:layout_height="60px" />
        <Button
            android:id="@+id/btn_subtract"
            android:layout_marginLeft="3px"
            android:background="@drawable/btndepthdownimage_frmkeycut_docutres"
            android:layout_width="97px"
            android:layout_height="60px" />
        <Button
            android:id="@+id/btn_add"
            android:background="@drawable/btnscrolllistupdisabledimage_frmbarcoderes"
            android:layout_width="97px"
            android:layout_height="60px" />
    </LinearLayout>
</LinearLayout>