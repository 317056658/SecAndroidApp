<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kkkcut.www.myapplicationkukai.publicActivity.LanguageChoiceActivity">
    <TextView
        android:id="@+id/tv_title"
        android:background="#16A4FA"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Language"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:background="#FAFAFA"
            android:id="@+id/language_list"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"></ListView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/btn_cancel"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="3dp"
                android:background="@drawable/btn_confirm_bg_effect"
                android:id="@+id/btn_ok"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_close_bg_effect"
                android:id="@+id/btn_cancel"
                android:text="Cancel"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
