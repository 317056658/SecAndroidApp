<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.kkkcut.www.myapplicationkukai.dialogActivity.UpdateAppActivity">
     <TextView
         android:textStyle="bold"
         android:textColor="#000000"
         android:textSize="30sp"
           android:text="有更新啦！"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_app_size"
          android:textSize="20sp"
          android:text="大小"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
       <TextView
           android:textStyle="bold"
           android:textColor="#000000"
           android:textSize="24sp"
           android:text="更新内容:"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/tv_content_describe"
           android:textSize="20sp"
           android:text="修复了一些Bug"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textColor="#7CFC00"
            android:text="当前为WiFi网络坏境，可放心下载."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <com.kkkcut.www.myapplicationkukai.view.ProgressBarWithPercent
        android:id="@+id/progressBarWithPercent"
        style="@style/ProgressBarWithPercent_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        custom:progress_current="0" />
    <RelativeLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_update"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:background="#16A4FA"
            android:text="立即更新"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <TextView
            android:clickable="true"
            android:id="@+id/tv_text_hint"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:background="#16A4FA"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="正在下载中"
            android:visibility="gone"
            android:layout_width="130dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_cancel_update"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_exit_procedure"
            android:text="暂不更新"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>
