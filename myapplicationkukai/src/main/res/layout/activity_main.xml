<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kkkcut.www.myapplicationkukai.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDC002">
        <ImageView
            android:id="@+id/iv_firm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kukailogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="SEC-E9"
                android:textColor="#FBFCFA"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Fully Automated Key Machine"
                android:textColor="#6E927B"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
            android:layout_height="0dp"
           android:layout_weight="1"
        android:gravity="center">
        <GridLayout
            android:id="@+id/gl_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="6"
            android:rowCount="3">
            <!-- 去掉边框 android:background="#00ffffff"-->
            <Button
                android:id="@+id/btn_automobile_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:background="@drawable/btn_automobile_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Automobile"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_motorcycle_key_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_motorcycle_bg_effect"
                android:gravity="bottom|center"
                android:text="Motorcycle"
                android:paddingBottom="3dp"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_civil_key_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_standard_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Standard"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_dimple_key_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_dimple_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Dimple"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_tubular_key_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_tubular_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Tubular"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_search_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Search"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_cut_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_cut_history_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Cut History"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_copy_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_duplicating_key_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Duplicating Key"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_user_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customized_key_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="My Key Info"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_last_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_last_key_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Last Key"
                android:textAllCaps="false"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_favorite_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Favorite"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnEngrave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_key_marking_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Key Marking"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_setup_bg_effect"
                android:gravity="bottom|center"
                android:paddingBottom="3dp"
                android:text="Setup"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </GridLayout>
        <Button
            android:id="@+id/btn_shutdown"
            android:text="Shut down"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            android:visibility="invisible"
            android:layout_gravity="right|bottom"
            android:gravity="center|bottom"
            android:background="@drawable/exitimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#16A4FA">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:text="www.kkkcut.com"
                android:id="@+id/tv_url"
                android:autoLink="all"
                android:textColorLink="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_copyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright(c) 2016 SEC. All rights reserved."
                    android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SN:"
                    android:textSize="16sp" />
                <TextView
                    android:text="EZ15062888"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Software:"
                    android:textSize="16sp" />
                <TextView
                    android:text="14.0.0.2"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firmware:"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.00"
                    android:textSize="16sp" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>
