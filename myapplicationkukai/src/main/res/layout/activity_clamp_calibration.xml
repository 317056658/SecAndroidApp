<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clamp_calibration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.setup.FrmCalibrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16A4FA">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/picturebox2image_frmmaintenanceres" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Clamp Calibration"
            android:textColor="#010103"
            android:textSize="26sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FDDE81"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#0"
                            android:textColor="#010103"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Decoder-Cutter Distance please Use #! Clamp"
                            android:textColor="#010103"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="After distance test,please press corresponding button for calibration\naccording to the used clampType."
                            android:textColor="#FD150C" />

                    </LinearLayout>

                    <Button
                        android:gravity="center|bottom"
                        android:textAllCaps="false"
                        android:text="Start"
                        android:id="@+id/btn_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/start_img_switching"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fixture1"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDDE81">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="#010103"
                        android:textStyle="bold" />
                    <TextView
                        android:textColor="#010103"
                        android:text="Automobile key\nClamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/picturebox1image_frmcalibrationres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_calibrate_fixture1"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btncalibleftclamp1image_switching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fixture2"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDDE81">

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2"
                        android:textColor="#010103"
                        android:textStyle="bold" />
                    <TextView
                        android:textColor="#010103"
                        android:text="Dimple key\nClamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCalibLeftClamp2"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/picturebox3image_frmcalibrationres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_calibrate_fixture2"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btncalibleftclamp1image_switching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fixture3"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDDE81">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3"
                        android:textColor="#010103"
                        android:textStyle="bold" />
                    <TextView
                        android:textColor="#010103"
                        android:text="Single-Side\nStandard Key Cl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView

                    android:layout_marginLeft="5dp"
                    android:src="@drawable/picturebox4image_frmcalibrationres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_calibrate_fixture3"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btncalibleftclamp1image_switching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fixture4"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDDE81">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#4"
                        android:textColor="#010103"
                        android:textStyle="bold" />

                    <TextView

                        android:textColor="#010103"
                        android:text="Dimple Key \nClamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/btnCalibLeftClamp4"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/picturebox5image_frmcalibrationres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_calibrate_fixture4"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btncalibleftclamp1image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_calibration_wait"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#010103"
                android:textSize="20sp"
                android:text="Clamp Calibration Please wait......"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_move"
                android:gravity="right|bottom"
                android:textAllCaps="false"
                android:background="@drawable/move_img_switching"
                android:text="Move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_manual_set"
                android:gravity="bottom|center"
                android:layout_marginTop="15dp"
                android:background="@drawable/manual_img_switching"
                android:textAllCaps="false"
                android:text="Manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_stop_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/btnstopimage"
                android:gravity="bottom|center"
                android:text="Stop"
                android:textAllCaps="false" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_close_activity"
            android:gravity="bottom|center"
            android:textAllCaps="false"
            android:text="Close"
            android:layout_gravity="right|bottom"
            android:background="@drawable/close_img_switching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
